<div>
	<p>
	  <strong>Title:</strong>
	  <%= @post.title %>
	</p>

	<p>
	  <strong>Author:</strong>
	  <%= @post.user.username %>
	</p>

	<p>
	  <strong>Blog entry:</strong><br>
	  <%= @post.blog_entry %>
	</p>

	<p>
	<%= link_to 'Edit', edit_post_path(@post) %> |
	</p>

	<% @post.comments.each do |comment| %>
		<%= comment.user.email %><br>
		<%= comment.comment_entry %><br>
		<%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
	<% end %>

</div>
	

<%= link_to 'Back', posts_path %>

<div>
	<%= render 'comments/form', locals: {post: @post} %>
</div>
